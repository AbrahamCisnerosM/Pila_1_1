   public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int tope = 0, op = 0;
        char pila[] = new char[26];
        do {
            System.out.println("\nIngrese una opcion...");
            System.out.println("1.- Ingresar dato...");
            System.out.println("2.- Mostrar pila...");
            System.out.println("3.- Llenar pila aleatoriamente...");
            System.out.println("4.- Borrar ultimo dato...");
            System.out.println("5.- Ordenar pila alfabeticamente...");
            System.out.println("6.- Salir.../n/n");
            op = sc.nextInt();
            switch (op) {
                case 1:
                    if (tope == 26) {//este if analiza que la pila no este llena, revisa el tope, si tope vale 26, la pila esta llena
                        System.out.println("\nLa pila esta llena\n");
                    } else {//si la pila no esta llena hara esta funcion
                        System.out.println("\nIngrese la letra en MAYUSCULA\n");//es importante que trabajemos con mayusculas por valor ascii
                        pila[tope] = sc.next().charAt(0);
                        tope++;
                    }
                    break;
                case 2:
                    if (tope == 0) {//aqui revisamos que la pila no este vacia
                        System.out.println("\nLa pila esta vacia\n");
                    } else {//si la pila tiene algun elemento, puede hacer esta funcion
                        System.out.println("\nMostrando pila\n");
                        for (int x = tope - 1; x >= 0; x--) {
                            System.out.print(" " + pila[x]);
                        }
                        System.out.println("");
                    }
                    break;
                case 3:
                    if (tope == 26) {
                        System.out.println("\nLa pila esta llena\n");
                    } else {
                        for (; tope < 26; tope++) {
                            pila[tope] = (char) Math.floor((Math.random() * (90 - 65 + 1)) + 65);//aqui trabaja con codigo ascii, elige un numero entre 65 y 90
                        }
                        System.out.println("\nPila llena automaticamente\n");
                    }
                    break;
                case 4:
                    if (tope == 0) {
                        System.out.println("\nNo hay elementos para borrar\n");
                    } else {
                        tope--;
                        System.out.println("\nElemento eliminado\n");
                    }
                    break;
                case 5://aqui se utiliza el metodo de la burbuja para ordenar
                    char aux;
                    for (int c1 = 0; c1 < tope; c1++) {
                        for (int c2 = 0; c2 < tope - 1; c2++) {
                            if (pila[c2] < pila[c2 + 1]) {
                                aux = pila[c2];
                                pila[c2] = pila[c2 + 1];
                                pila[c2 + 1] = aux;
                            }//ordena de menor a mayor
                        }
                    }
                    System.out.println("\nPila ordenada\n");
                    break;
            }
        } while (op != 6);//cuando el usurario meta la opcion 6, termina el programa

    }

}
